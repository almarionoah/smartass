<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <EditText
        android:id="@+id/txtAnswerPad"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="348dp"
        android:layout_height="169dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:ems="10"
        android:hint="The Guessing Game\n\t\t\tO/???\n\t\t\t/|\tGuess the number between 0 and 100\n\t\t\t/\\t\tWhat number am I? \n\n\t\t\tType an answer to begin..."
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/btnSubmit"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:onClick="btnSubmit"
        app:srcCompat="@drawable/answer-button-hi"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/txtResponse"
        android:layout_width="314dp"
        android:layout_height="87dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="You win!!!!"
        android:textColor="#00FF00"
        android:textSize="24sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="384dp" />

    <EditText
        android:id="@+id/txtNumberOfTries"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="# of tries left: 5"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="314dp" />

</android.support.constraint.ConstraintLayout>